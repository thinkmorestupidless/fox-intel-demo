# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                   controllers.ApplicationController.index
GET         /gw/oauth2                          controllers.ApplicationController.oauth2

GET         /gw/user                            controllers.ApplicationController.user
GET         /gw/signOut                         controllers.ApplicationController.signOut
POST        /gw/signIn                          controllers.SignInController.submit
POST        /gw/signUp                          controllers.SignUpController.submit
#GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)
#POST        /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)
POST        /gw/password/forgot                 controllers.ForgotPasswordController.submit
POST        /gw/password/reset/:token           controllers.ResetPasswordController.submit(token: java.util.UUID)
POST        /gw/password/change                 controllers.ChangePasswordController.submit

# App routes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)
GET     /templates/*file                     controllers.Assets.at(path="/public", file)

# Bundle files generated by Webpack
GET     /bundles/*file                       controllers.ApplicationController.bundle(file)
